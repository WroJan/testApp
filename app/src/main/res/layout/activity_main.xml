<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/emailText" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="100dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="131dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="98dp" android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toTopOf="@+id/passText" app:layout_constraintVertical_bias="0.52"/>
    <EditText
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passText" android:layout_marginTop="19dp"
            app:layout_constraintTop_toBottomOf="@+id/emailText" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="100dp" android:layout_marginBottom="41dp"
            app:layout_constraintBottom_toTopOf="@+id/submitID" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="98dp"/>
    <Button
            android:text="Reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/resetID" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="98dp"
            app:layout_constraintEnd_toStartOf="@+id/submitID" android:layout_marginEnd="37dp"
            android:layout_marginBottom="402dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="42dp" app:layout_constraintTop_toBottomOf="@+id/passText"
    />
    <Button
            android:text="Continue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/submitID"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/passText" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="399dp" app:layout_constraintStart_toEndOf="@+id/resetID"
            android:layout_marginStart="37dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="95dp"/>

</android.support.constraint.ConstraintLayout>